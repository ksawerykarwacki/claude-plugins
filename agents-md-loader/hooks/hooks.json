{
  "description": "Loads AGENTS.md files into Claude's context at session start",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/load-agents.sh",
            "statusMessage": "Loading AGENTS.md files..."
          }
        ]
      }
    ]
  }
}
